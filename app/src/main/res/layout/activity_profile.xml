<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:background="@drawable/profile_bg"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <ScrollView
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/profile_layout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/profile_tv_name"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text=""
                        android:fontFamily="@font/share_bold"
                        android:textSize="23sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/profile_tv_email"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text=""
                        android:fontFamily="@font/share_regular"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_margin="30dp"
                        android:id="@+id/profile_btn_edit"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="EDIT"
                        android:textSize="20sp"
                        android:background="@drawable/round_btn_save"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="MOBILE NO :"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_mobile"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="ADDRESS 1 :"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_address1"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="ADDRESS 2 :"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_address2"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="CITY :"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_city"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="STATE :"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_state"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="2"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:text="PINCODE :"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textColor="@color/colorWhite"
                                    android:layout_weight="1"
                                    android:id="@+id/profile_tv_pincode"
                                    android:layout_margin="10dp"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:fontFamily="@font/share_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/update_layout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="NAME :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="MOBILE NO :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="phone"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="EMAIL :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="ADDRESS 1 :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_address1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="textPostalAddress"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="ADDRESS 2 :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_address2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="textPostalAddress"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="CITY :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_city"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="STATE :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_state"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="ZIPCODE :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.libizo.CustomEditText
                        android:id="@+id/user_et_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:hint=""
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:text=""
                        android:maxLength="6"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:libIZO_setFont="@string/share_regular"
                        app:libIZO_clearIconTint="@color/colorAccent"
                        app:libIZO_setBorderColor="#5c5c5c"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="50dp"
                        app:libIZO_setStrokeWidth="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="30dp"
                        android:id="@+id/user_btn_save"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:text="SAVE"
                        android:textSize="20sp"
                        android:background="@drawable/round_btn_cart"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/start_layout"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="30dp"
                android:id="@+id/profile_btn_login"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="LOG IN"
                android:textSize="20sp"
                android:background="@drawable/round_btn_cart"
                android:fontFamily="@font/share_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="30dp"
                android:id="@+id/profile_btn_register"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Register"
                android:textSize="20sp"
                android:background="@drawable/round_btn_save"
                android:fontFamily="@font/share_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="20sp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/share_regular"
                android:text="You Haven't Logged In Yet..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/register_layout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="15dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/share_bold"
                    android:textSize="23sp"
                    android:gravity="left"
                    android:text="REGISTER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_margin="5dp"
                        android:text="MOBILE NO :"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
