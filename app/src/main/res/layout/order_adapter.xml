<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="5dp"
            android:id="@+id/cv_order"
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            app:cardMaxElevation="10dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/order_pro_name"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:fontFamily="@font/share_bold"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/order_cross_price"
                            android:gravity="center"
                            android:textColor="#f00020"
                            android:textSize="14sp"
                            android:text=""
                            android:fontFamily="@font/share_regular"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/order_price"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:background="#1dad01"
                            android:textSize="16sp"
                            android:text=""
                            android:fontFamily="@font/share_bold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/order_tv_color"
                                android:text=""
                                android:textColor="@color/colorOrange"
                                android:textSize="16sp"
                                android:fontFamily="@font/share_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/colorOrange"
                                android:layout_weight="1"
                                android:id="@+id/order_tv_size"
                                android:text=""
                                android:textSize="16sp"
                                android:fontFamily="@font/share_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textSize="15sp"
                                android:fontFamily="@font/share_regular"
                                android:text="Quantity : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:id="@+id/order_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="18sp"
                                android:fontFamily="@font/share_bold"
                                android:text="Total :"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/order_total_price"
                                android:gravity="center"
                                android:textColor="#FFF"
                                android:background="#fec430"
                                android:textSize="16sp"
                                android:text=""
                                android:fontFamily="@font/share_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.android.volley.toolbox.NetworkImageView
                            android:layout_gravity="center"
                            android:id="@+id/order_image"
                            android:src="@drawable/image_preview"
                            android:layout_width="match_parent"
                            android:layout_height="150dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/order_btn_detail"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/share_bold"
                        android:textColor="#FFFFFF"
                        android:text="VIEW DETAILS"
                        android:textSize="18sp"
                        android:background="@drawable/round_btn_cart"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>