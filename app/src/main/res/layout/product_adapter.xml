<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_product"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/product_layout"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/product_iv"
                android:layout_width="130dp"
                android:layout_height="130dp" />
            <TextView
                android:textColor="@color/colorWhite"
                android:background="@color/colorOrange"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center"
                android:fontFamily="@font/share_bold"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:id="@+id/product_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/product_price"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#1dad01"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/share_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/product_cprice"
                    android:gravity="left"
                    android:textColor="#f00020"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/share_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:background="#fec430"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_prate"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text=""
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/ic_star"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_trate"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text=""
                        android:textSize="16sp"
                        android:fontFamily="@font/share_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>