<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderDetailActivity">
    <ScrollView
        android:id="@+id/order_detail_layout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/order_detail_tv_name"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#df0623"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:background="@color/colorOrange"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/order_detail_prate"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:text=""
                                android:textSize="16sp"
                                android:fontFamily="@font/share_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ic_star"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingRight="5dp"
                                android:id="@+id/order_detail_price"
                                android:gravity="center"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="#1dad01"
                                android:fontFamily="@font/share_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/order_detail_cprice"
                                android:gravity="center"
                                android:textColor="#f00020"
                                android:text=""
                                android:textSize="14sp"
                                android:fontFamily="@font/share_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/slide_indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="top"
                        android:padding="10dip"
                        app:centered="true"
                        app:fillColor="#df0623"
                        app:pageColor="#fff"
                        app:snap="false" />
                    <android.support.v4.view.ViewPager
                        android:id="@+id/slide_pager"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentTop="true">
                    </android.support.v4.view.ViewPager>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/order_detail_stock"
                        android:text=""
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/share_bold"
                        android:textColor="#1dad01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:id="@+id/order_detail_tab_product"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="PRODUCT"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>
                    <TextView
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/order_detail_tab_detail"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="DETAILS"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>
                    <TextView
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/order_detail_tab_review"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="REVIEWS"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/tab_product_layout"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="Available Color :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tab_product_color"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="Available Size/ Storage/ Capacity/ Volume :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tab_product_size"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab_detail_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="Category :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tab_detail_category"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="Brand :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tab_detail_brand"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="Description :"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tab_detail_desc"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab_review_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/review_layout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:clipToPadding="false"
                            android:scrollbars="vertical"
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:id="@+id/rv_order_detail_review"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/empty_review_layout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/share_regular"
                            android:textSize="16sp"
                            android:text="No Reviews Yet."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/order_detail_btn_layout"
                    android:layout_marginBottom="30dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/order_detail_btn_save"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="SAVE TO BAG"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:background="@drawable/round_btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/order_detail_btn_cart"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="ADD TO CART"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:background="@drawable/round_btn_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:background="#FFF"
        android:visibility="gone"
        android:id="@+id/order_detail_empty_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/empty"
            android:layout_width="100dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Sorry, No Products Details are Available."
            android:textSize="18sp"
            android:fontFamily="@font/share_regular"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <in.ishankhanna.UberProgressView
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        android:id="@+id/order_detail_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fading_circle_color="@android:color/holo_red_dark"
        app:stationary_circle_color="@android:color/holo_red_dark"
        app:orbiting_circle_color="@android:color/holo_red_dark"
        app:direction="clockwise"
        app:orbiting_circle_radius="3dp"
        app:stationary_circle_radius="8dp" />
</RelativeLayout>