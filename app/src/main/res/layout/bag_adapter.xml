<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardMaxElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bag_pro_name"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/share_bold"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/bag_cross_price"
                        android:gravity="center"
                        android:textColor="#f00020"
                        android:textSize="14sp"
                        android:text=""
                        android:fontFamily="@font/share_regular"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/bag_price"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:background="#1dad01"
                        android:textSize="16sp"
                        android:text=""
                        android:fontFamily="@font/share_bold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/bag_tv_color"
                            android:text=""
                            android:textColor="@color/colorOrange"
                            android:textSize="16sp"
                            android:fontFamily="@font/share_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorOrange"
                            android:layout_weight="1"
                            android:id="@+id/bag_tv_size"
                            android:text=""
                            android:textSize="16sp"
                            android:fontFamily="@font/share_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:background="@color/colorPrimaryDark"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/bag_rate"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:text=""
                                android:textSize="16sp"
                                android:fontFamily="@font/share_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ic_star"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:paddingLeft="15dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/bag_total_rate"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:text=""
                                android:textSize="16sp"
                                android:fontFamily="@font/share_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_gravity="center"
                        android:id="@+id/bag_image"
                        android:src="@drawable/image_preview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_btn_save"
                        android:layout_weight="1"
                        android:id="@+id/bag_btn_remove"
                        android:fontFamily="@font/share_bold"
                        android:text="REMOVE"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_btn_cart"
                        android:layout_weight="1"
                        android:id="@+id/bag_btn_detail"
                        android:fontFamily="@font/share_bold"
                        android:text="VIEW DETAILS"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>